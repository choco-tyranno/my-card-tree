<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.choco_tyranno.mycardtree.card_crud_feature.presentation.CardViewModel" />

        <variable
            name="cardState"
            type="com.choco_tyranno.mycardtree.card_crud_feature.presentation.card_rv.CardState" />

        <variable
            name="card"
            type="com.choco_tyranno.mycardtree.card_crud_feature.domain.card_data.CardDTO" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/backCard_constraintLayout"
        android:layout_width="@dimen/container_width"
        android:layout_height="@dimen/container_height">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/backCard_cardView"
            app:onTouchListener="@{viewModel.onTouchListener}"
            android:layout_width="320dp"
            android:layout_height="140dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="8dp"
            app:cardElevation="12dp">

            <ImageView
                android:id="@+id/backCard_imageView"
                android:layout_width="@dimen/card_thumbnail_image_width"
                android:layout_height="@dimen/card_thumbnail_image_height"
                android:contentDescription="@string/description_image_1"
                android:scaleType="centerCrop"
                android:src="@drawable/default_card_image_01"
                android:transitionName="shared_element_img" />

        </com.google.android.material.card.MaterialCardView>


        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="270dp"
            android:layout_marginBottom="90dp"
            app:layout_constraintBottom_toBottomOf="@id/backCard_cardView"
            app:layout_constraintLeft_toLeftOf="@id/backCard_cardView"
            android:elevation="24dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/backCard_remove_btn"
                android:layout_gravity="end|top"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:onClick="@{(view)->viewModel.onRemoveBtnClicked(view, card)}"
                android:text="@string/card_remove_btn_text"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:visibility="@{cardState.removeBtnVisibility}"
                app:backgroundTint="@color/colorPrimaryDark"
                app:cornerRadius="25dp"
                app:elevation="24dp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView_to_fullscreen"
                android:layout_gravity="bottom"
                android:src="@drawable/ic_baseline_fullscreen_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>