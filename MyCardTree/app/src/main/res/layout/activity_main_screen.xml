<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.choco_tyranno.mycardtree.card_crud_feature.presentation.CardViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main_coordinator"
        android:layout_width="410dp"
        android:layout_height="800dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        tools:context=".card_crud_feature.presentation.MainCardActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/main_appbar"
            android:layout_width="410dp"
            android:layout_height="70dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$Behavior">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/main_collapsingtoolbar"
                android:layout_width="410dp"
                android:layout_height="70dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:minHeight="30dp"
                app:collapsedTitleTextAppearance="@style/CollapsingTitleStyle"
                app:expandedTitleTextAppearance="@style/ExpandedTitleStyle"
                app:layout_scrollFlags="scroll|enterAlways"
                app:titleEnabled="true">

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/app_name_fab"
                    android:text="@string/app_name"
                    android:textAllCaps="false"
                    android:paddingStart="25dp"
                    android:paddingEnd="0dp"
                    android:layout_width="137dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="10dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/overlock_regular"
                    />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/main_mode_switch"
                    android:onCheckedChanged="@{(view, isOn)->viewModel.onModeChanged(view, isOn)}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginVertical="15dp"
                    android:layout_marginEnd="10dp"
                    />

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>


        <include android:id="@+id/main_body"
            layout="@layout/activity_main_body"
            bind:viewModel="@{viewModel}"/>

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottomAppBar"
            style="@style/Widget.MaterialComponents.BottomAppBar.Colored"
            android:layout_width="410dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addNewCardUtil_fab"
            android:onLongClickListener="@{viewModel.onLongListenerForCreateCardUtilFab}"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:backgroundTint="@color/colorPrimary"
            android:contentDescription="@string/order_card_fab_content_description"
            android:elevation="12dp"
            app:layout_anchor="@+id/bottomAppBar" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>