<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!--Title-->
    <TextView
        android:id="@+id/parent_item_title"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:padding="12sp"
        android:text="test text :"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.chip.Chip
        android:id="@+id/delete_chip"
        style="@style/Widget.MaterialComponents.Chip.Action"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="12dp"
        android:text="Delete"
        app:chipIcon="@drawable/delete_black_24" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/connecting_dot_1"
        android:layout_width="3dp"
        android:layout_height="3dp"
        app:layout_constraintTop_toBottomOf="@+id/delete_chip"
        app:layout_constraintStart_toStartOf="@id/delete_chip"
        app:layout_constraintEnd_toEndOf="@id/delete_chip"
        android:layout_marginVertical="5dp"
        android:backgroundTint="@color/colorAccent"
        android:elevation="0dp" />

    <!--Child RecyclerView-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/child_recyclerview"
        app:layout_constraintTop_toBottomOf="@id/parent_item_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layer_height"
        android:clipChildren="false"
        android:clipToPadding="false" />


</androidx.constraintlayout.widget.ConstraintLayout>